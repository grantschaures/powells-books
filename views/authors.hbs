<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<body>
    <header>
        <div class="powells-logo">
            <img src="images/logo-0714.jpg">
        </div>
    </header>
    
    <main>
        <div class="nav_bar">
            <ul class="navbar">
                <li><a href="index.hbs">Home</a></li>
                <li><a href="books.hbs">Books</a></li>
                <li><a class="active" href="authors.hbs">Authors</a></li>
                <li><a href="genres.hbs">Genres</a></li>
                <li><a href="customers.hbs">Customers</a></li>
                <li><a href="sales.hbs">Sales</a></li>
                <li><a href="books_authors.hbs">Books-Authors</a></li>
            </ul>
        </div>
        <div>
            <h1>Authors</h1>
        </div>

        <div>
            <table id="authors_table" class="grid-container" style="margin-top: 50px">
                <thead>
                    <tr>
                        <th>
                            Author ID
                        </th>
                        <th>
                            Author Name
                        </th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody id="table-rows-update">
                    {{#each data}}
                    <tr data-value={{this.author_id}}>
                        <td>{{this.author_id}}</td>
                        <td>{{this.author_name}}</td>
                        <td><button onclick="deleteAuthor({{this.author_id}})">delete</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="./js/delete_author.js"></script>

        </div>
        <div>
            <h3>Search Author</h3>
            <form class="form" id="search-author" method="POST">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <label for="search_authorName">Author: </label>
                            </td>
                            <td>
                                <input type="text" id="search_authorName" required>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-buttons">
                    <input type="submit" value="Search">
                    <a href="authors.hbs">
                        <input type="button" value="Reset">
                    </a>
                </div>
            </form>
            <script src="./js/search_author.js"></script>
        </div>
        <div>
            <h3>Add Author</h3>
            <form class="form" id="add-author" method="POST">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <label for="authorName">Author Name: </label>
                            </td>
                            <td>
                                <input type="text" id="authorName" required>
                            </td>
                            <td>*Required</td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-buttons">
                    <input type="submit" value="Add">
                    <a href="authors.hbs">
                        <input type="button" value="Cancel">
                    </a>
                </div>
            </form>
            <script src="./js/add_author.js"></script>
        </div> 
    </main>

    <footer>
        <p>&copy Powell's Books Database Interface - Created by Team #42</p>
    </footer>
    
</body>