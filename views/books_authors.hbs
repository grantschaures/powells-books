<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<body>
    <header>
        <div class="powells-logo">
            <img src="images/logo-0714.jpg">
        </div>
    </header>
    
    <main>
        <div class="nav_bar">
            <ul class="navbar">
                <li><a href="index.hbs">Home</a></li>
                <li><a href="books.hbs">Books</a></li>
                <li><a href="authors.hbs">Authors</a></li>
                <li><a href="genres.hbs">Genres</a></li>
                <li><a href="customers.hbs">Customers</a></li>
                <li><a href="sales.hbs">Sales</a></li>
                <li><a class="active" href="books_authors.hbs">Books-Authors</a></li>
            </ul>
        </div>
        <div>
            <h1>Books & Authors</h1>
        </div>
        <div>
            <table class="grid-container" style="margin-top: 50px">
                <thead>
                    <tr>
                        <th>
                            Book-Author ID
                        </th>
                        <th>
                            Book Title
                        </th>
                        <th>
                            Author Name
                        </th>
                    </tr>
                </thead>
                <tbody id="table-rows-update">
                    {{#each data}}
                    <tr data-value={{this.book_author_id}}>
                        <td>{{this.book_author_id}}</td>
                        <td>{{this.book_title}}</td>
                        <td>{{this.author_name}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
        </div>
    </main>

    <footer>
        <p>&copy Powell's Books Database Interface - Created by Team #42</p>
    </footer>
    
</body>